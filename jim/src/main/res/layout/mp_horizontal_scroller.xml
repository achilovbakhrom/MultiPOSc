<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mpLeftArrow"
            android:layout_width="@dimen/forty_five_dp"
            android:layout_height="@dimen/forty_eight_dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/oreder_navigator_left" />

        <RelativeLayout
            android:layout_width="@dimen/hundred_forty_five_dp"
            android:layout_height="@dimen/forty_eight_dp">

            <ImageView
                android:id="@+id/mpCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/oreder_navigator_center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/eleven_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mpCenterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:id="@+id/mpCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/mpRightArrow"
            android:layout_width="@dimen/forty_five_dp"
            android:layout_height="@dimen/forty_eight_dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/oreder_navigator_right" />
    </LinearLayout>

</merge>