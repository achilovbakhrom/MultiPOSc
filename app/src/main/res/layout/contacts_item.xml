<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/five_dp"
    android:layout_marginTop="@dimen/five_dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvContacts"
        android:layout_width="@dimen/hundred_thirty_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/five_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:paddingTop="@dimen/five_dp"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:background="@drawable/edit_text_bg">

        <EditText
            android:id="@+id/tvContactsValue"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/enter_phone"
            android:inputType="phone"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/sixteen_dp" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:src="@drawable/cancel_search"
            android:visibility="gone" />

    </LinearLayout>

    <com.jim.mpviews.MpMiniActionButton
        android:id="@+id/ivRemoveContact"
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/twelve_dp"
        android:paddingTop="@dimen/twelve_dp"
        android:src="@drawable/trash_mini" />
</LinearLayout>