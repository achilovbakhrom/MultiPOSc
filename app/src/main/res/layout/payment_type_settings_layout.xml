<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/thirty_five_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/system_payment_types"
                        android:textColor="#212121"
                        android:textSize="@dimen/eighteen_dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/hundred_fifty_dp"
                        android:text="Phasellus pretium sed mauris at semper."
                        android:textColor="#b8b8b8"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/two_hundred_seventy_five_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/twenty_five_dp"
                    android:text="@string/payment_type_name"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="@dimen/hundred_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:text="@string/account"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/twenty_five_dp"
                    android:text="@string/active"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action"
                    android:textSize="@dimen/eighteen_dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etPaymentTypeName"
                    android:layout_width="@dimen/two_hundred_seventy_five_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/twenty_five_dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/enter_payment_type_name"
                    android:maxLength="50"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <com.jim.mpviews.MPosSpinner
                    android:id="@+id/spAccount"
                    android:layout_width="@dimen/hundred_fifty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginRight="@dimen/twenty_five_dp" />

                <com.jim.mpviews.MpCheckbox
                    android:id="@+id/chbActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/thirty_dp" />

                <com.jim.mpviews.MpMiniActionButton
                    android:id="@+id/btnAdd"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/twelve_dp"
                    android:paddingTop="@dimen/twelve_dp"
                    android:src="@drawable/plus"
                    android:tint="@color/colorGreen" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e5e5e5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ffffff" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPaymentTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/ten_dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>