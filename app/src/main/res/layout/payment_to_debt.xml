<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/five_hundred_dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:background="@drawable/rounded_blue_bg">

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/thirty_dp"
                android:text="Payment to debt"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="@string/amount"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:orientation="horizontal">

            <com.jim.mpviews.MpEditText
                android:id="@+id/etAmount"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_five_dp"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_weight="1"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true" />

            <TextView
                android:id="@+id/tvCurrencyAbbr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/forty_dp"
                android:gravity="center_vertical"
                android:text="UZS"
                android:textColor="#212121"
                android:textSize="@dimen/eighteen_dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:text="@string/payment_type"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MPosSpinner
            android:id="@+id/spPaymentType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginLeft="@dimen/twenty_five_dp"
            android:layout_marginRight="@dimen/thirty_dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@color/colorTextHint" />

        <LinearLayout
            android:id="@+id/llBtnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.jim.mpviews.MpButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/hundred_fifty_dp"
                android:layout_height="@dimen/fifty_four_dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/fifteen_dp"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/sixteen_dp"
                android:textStyle="bold" />

            <com.jim.mpviews.MpButton
                android:id="@+id/btnPay"
                android:layout_width="@dimen/hundred_fifty_dp"
                android:layout_height="@dimen/fifty_four_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/pay"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>