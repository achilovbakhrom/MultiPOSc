<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty_dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ten_dp">

    <ImageView
        android:layout_width="@dimen/fifteen_dp"
        android:layout_height="@dimen/fifteen_dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_button"
        android:tint="@color/colorBlue" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="001"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:text="26/05/2018 14:56"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="10 000 000,00"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="56/100"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Google Inc"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="416874654646"
        android:layout_marginRight="@dimen/ten_dp"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/sixteen_dp" />

    <com.jim.mpviews.MpMiniActionButton
        android:id="@+id/btnAddProductToConsignment"
        android:layout_width="@dimen/fifty_five_dp"
        android:layout_height="@dimen/thirty_five_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/ten_dp"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingTop="@dimen/ten_dp"
        android:tint="@color/colorTintGrey"
        android:src="@drawable/ic_question_mark" />

    <com.jim.mpviews.MpButton
        android:id="@+id/btnConfirm"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/thirty_five_dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/select"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sixteen_dp"
        android:textStyle="bold" />

</LinearLayout>