<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llVendor"
                android:layout_width="@dimen/three_hundred_thirty_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Vendor"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/sixteen_dp"/>
                <ImageView
                    android:id="@+id/ivVendorSort"
                    android:src="@drawable/sorting"
                    android:visibility="gone"
                    android:layout_width="@dimen/twelve_dp"
                    android:layout_height="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    />
            </LinearLayout>


            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#e3e3e3"/>

            <LinearLayout
                android:id="@+id/llProduct"
                android:layout_width="@dimen/four_hundred_thirty_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/thirty_dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:text="Products"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/sixteen_dp"/>
                <ImageView
                    android:id="@+id/ivProductSort"
                    android:src="@drawable/sorting"
                    android:visibility="gone"
                    android:layout_width="@dimen/twelve_dp"
                    android:layout_height="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    />
            </LinearLayout>



            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#e3e3e3"/>

            <LinearLayout
                android:id="@+id/llDebt"
                android:layout_width="@dimen/two_hundred_twenty_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Debt"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/sixteen_dp"/>
                <ImageView
                    android:id="@+id/ivDebtSort"
                    android:src="@drawable/sorting"
                    android:visibility="gone"
                    android:layout_width="@dimen/twelve_dp"
                    android:layout_height="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    />
            </LinearLayout>


            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#e3e3e3"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Operations"
                android:textColor="@color/colorMainText"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:textSize="@dimen/sixteen_dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#e3e3e3"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvVendorItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9f9f9"
            />

    </LinearLayout>


</LinearLayout>