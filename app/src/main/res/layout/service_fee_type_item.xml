<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_weight="1"
            android:text="@string/name"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="@dimen/three_hundred_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:text="@string/amount"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="Type"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <TextView
            android:id="@+id/tvAppType"
            android:layout_width="@dimen/hundred_forty_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="App type"
            android:textColor="#419fd9"
            android:textSize="@dimen/sixteen_dp" />

        <TextView
            android:id="@+id/tvActive"
            android:layout_width="@dimen/hundred_twenty_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:gravity="center_horizontal"
            android:text="Active"
            android:textColor="#419fd9" />

        <TextView
            android:layout_width="@dimen/hundred_forty_dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:gravity="center_horizontal"
            android:text="Action"
            android:textColor="#419fd9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="horizontal">

        <com.jim.mpviews.MpEditText
            android:id="@+id/etReason"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:hint="@string/name"
            android:inputType="textCapWords|textNoSuggestions"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpEditText
            android:id="@+id/etAmount"
            android:layout_width="@dimen/three_hundred_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:hint="@string/value"
            android:inputType="numberDecimal"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MPosSpinner
            android:id="@+id/spType"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp" />

        <com.jim.mpviews.MPosSpinner
            android:id="@+id/spAppType"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/forty_dp" />

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbActive"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/forty_dp"
            android:gravity="center"
            android:textSize="@dimen/sixteen_dp"
            app:checked="true" />

        <com.jim.mpviews.MpActionButton
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/hundred_forty_five_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_gravity="center_vertical"
            android:text="+Add"
            android:textColor="#23d730"
            android:textSize="@dimen/sixteen_dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:background="#e1e1e1" />


</LinearLayout>