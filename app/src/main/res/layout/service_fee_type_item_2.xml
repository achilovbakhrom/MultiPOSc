<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fifteen_dp"
    android:orientation="horizontal">

    <com.jim.mpviews.MpEditText
        android:id="@+id/etAmount"
        android:layout_width="@dimen/two_hundred_ten_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:hint="Value"
        android:inputType="numberDecimal"
        android:textColorHint="@color/colorTextHint"
        android:textSize="@dimen/sixteen_dp" />

    <com.jim.mpviews.MPosSpinner
        android:id="@+id/spType"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/forty_dp" />

    <com.jim.mpviews.MpEditText
        android:id="@+id/etReason"
        android:layout_width="@dimen/three_hundred_sixty_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:hint="Name"
        android:textColorHint="@color/colorTextHint"
        android:textSize="@dimen/sixteen_dp" />

    <com.jim.mpviews.MPosSpinner
        android:id="@+id/spAppType"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/forty_dp" />

    <com.jim.mpviews.MpCheckbox
        android:id="@+id/chbActive"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/thirty_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/five_dp" />

    <com.jim.mpviews.MpActionButton
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/hundred_forty_five_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:text="+Add"
        android:textColor="#23d730"
        android:textSize="@dimen/sixteen_dp" />
</LinearLayout>