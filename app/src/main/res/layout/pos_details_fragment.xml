<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/two_hundred_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/sixty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:text="@string/system_accounts"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/eighteen_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/pos_id"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etPosId"
                android:layout_width="@dimen/four_hundred_fifty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:hint="@string/pos_id"
                android:inputType="text"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/alias"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etAlias"
                android:layout_width="@dimen/four_hundred_fifty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:hint="@string/enter_pos_alias"
                android:inputType="text"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/address"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etAddress"
                android:layout_width="@dimen/four_hundred_fifty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:hint="@string/enter_pos_address"
                android:inputType="text"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/password"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etPassword"
                android:layout_width="@dimen/four_hundred_fifty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:fontFamily="roboto"
                android:gravity="left|center_vertical"
                android:hint="@string/password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="@string/repeat"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="@dimen/four_hundred_fifty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:layout_gravity="center"
                android:fontFamily="roboto"
                android:gravity="left|center_vertical"
                android:hint="@string/repeat_password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/eighteen_dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/twenty_dp"
        android:paddingRight="@dimen/twenty_dp">

        <com.jim.mpviews.MpButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/next"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/eighteen_dp" />
    </LinearLayout>
</LinearLayout>