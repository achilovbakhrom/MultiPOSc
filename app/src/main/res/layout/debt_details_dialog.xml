<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/four_hundred_fifty_dp"
        android:layout_height="@dimen/five_hundred_fifty_dp"
        android:background="@drawable/rounded_edit_text_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:background="@drawable/rounded_blue_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/thirty_dp"
                    android:text="Debt details"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/twenty_dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/seventy_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:text="Amount"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:orientation="horizontal">

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etAmount"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:id="@+id/tvCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:text="Debt Type"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />


            <com.jim.mpviews.MPosSpinner
                android:id="@+id/spDebtType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:text="Due Date"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />


            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:text="Fee"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />


            <com.jim.mpviews.MpEditText
                android:id="@+id/etFee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:hint="Percentage"
                android:inputType="numberDecimal"
                android:textColor="@color/colorMainText"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/fourteen_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.jim.mpviews.MpButton
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/sixteen_dp" />


                <com.jim.mpviews.MpButton
                    android:id="@+id/btnSave"
                    android:layout_width="@dimen/hundred_eighty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/sixteen_dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <com.jim.mpviews.FloatingSearchView
            android:id="@+id/flSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/seventy_dp"
            android:backgroundTint="@color/transparent"
            app:floatingSearch_searchSuggestionTextSize="@dimen/sixteen_dp"
            app:floatingSearch_searchHint="Customer"
            app:floatingSearch_suggestionsListAnimDuration="250"
            app:floatingSearch_showSearchKey="false"
            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"/>

    </RelativeLayout>
</RelativeLayout>