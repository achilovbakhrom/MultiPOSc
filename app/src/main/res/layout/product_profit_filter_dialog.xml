<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/three_hundred_dp"
    android:layout_height="@dimen/three_hundred_thirty_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/filter_frame"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profit group by:"
        android:textSize="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:textColor="#212121"
        android:layout_marginBottom="@dimen/ten_dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e4e4e4"/>
    <RadioGroup
        android:id="@+id/rgGroupBy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/rbProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/eighteen_dp"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="Product"
            android:checked="true"
            android:textColor="#212121"
            />
        <RadioButton
            android:id="@+id/rbCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/eighteen_dp"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="Category"
            android:textColor="#212121"


            />
        <RadioButton
            android:id="@+id/rbSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/eighteen_dp"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="Sub Category"
            android:textColor="#212121"


            />
        <RadioButton
            android:id="@+id/rbProductClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/eighteen_dp"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="Product Class"
            android:textColor="#212121"

            />
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e4e4e4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <com.jim.mpviews.MpButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/hundred_twenty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="Cancel"
            android:layout_marginTop="@dimen/five_dp"
            android:textColor="#acacac"/>
        <com.jim.mpviews.MpButton
            android:id="@+id/btnApply"
            android:layout_width="@dimen/hundred_twenty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:text="Apply"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:textColor="#419fd9"/>
    </LinearLayout>


</LinearLayout>