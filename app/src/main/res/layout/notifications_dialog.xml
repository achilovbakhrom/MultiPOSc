<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="@dimen/four_hundred_eighty_dp"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_back"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sixteen_dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCustomerVisits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/ten_dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sixteen_dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/twenty_five_dp"
                android:layout_height="@dimen/twenty_five_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/close" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sixteen_dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/thirty_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payments: "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fourteen_dp" />

                <TextView
                    android:id="@+id/tvTotalPayments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="@dimen/two_dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fourteen_dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Discounts: "
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fourteen_dp" />

                <TextView
                    android:id="@+id/tvTotalDiscounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="@dimen/two_dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fourteen_dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>