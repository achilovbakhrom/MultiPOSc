<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ninety_dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twenty_dp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:text=""/>
            <TextView
                android:id="@+id/tvVendorCantact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_dp"
                android:textColor="#a2a2a2"

                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvDebtD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_dp"
                    android:textColor="#212121"
                    android:text="@string/debt"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="@dimen/hundred_fifty_dp"
            android:gravity="right"
            android:layout_marginRight="@dimen/thirty_dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvDebtAmmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_dp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/twenty_dp"
                    android:text=""/>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ivPay"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/fifty_dp"
            android:src="@drawable/currency_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:background="@drawable/blueframe"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/llTimeDate"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/time_date"
                android:textColor="#fff"
                android:textSize="@dimen/sixteen_dp"/>
            <ImageView
                android:id="@+id/ivTimeDate"
                android:src="@drawable/sorting"
                android:visibility="visible"
                android:tint="#fff"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/llOperation"
        android:layout_width="@dimen/two_hundred_forty_dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/operation"
            android:textColor="#fff"
            android:textSize="@dimen/sixteen_dp"/>
        <ImageView
            android:id="@+id/ivOperation"
            android:src="@drawable/sorting"
            android:visibility="gone"
            android:tint="#fff"
            android:layout_width="@dimen/twelve_dp"
            android:layout_height="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/llExtra"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/extra"
                android:textColor="#fff"
                android:textSize="@dimen/sixteen_dp"/>
            <ImageView
                android:id="@+id/ivExtra"
                android:src="@drawable/sorting"
                android:visibility="gone"
                android:tint="#fff"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDescription"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/description"
                android:textColor="#fff"
                android:textSize="@dimen/sixteen_dp"/>
            <ImageView
                android:id="@+id/ivDescription"
                android:src="@drawable/sorting"
                android:visibility="gone"
                android:tint="#fff"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llPayment"
            android:layout_width="@dimen/two_hundred_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/payment_amount"
                android:textColor="#fff"
                android:textSize="@dimen/sixteen_dp"/>
            <ImageView
                android:id="@+id/ivPayment"
                android:src="@drawable/sorting"
                android:visibility="gone"
                android:tint="#fff"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAction"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/thirty_five_dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/action"
                android:textColor="#fff"
                android:textSize="@dimen/sixteen_dp"/>

        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvBilling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"/>
</LinearLayout>