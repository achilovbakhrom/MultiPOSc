<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ten_dp"
    android:layout_marginTop="@dimen/ten_dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvPaymentTypeName"
        android:layout_width="@dimen/two_hundred_five_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@drawable/text_view_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/forty_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:textColor="@color/colorMainText" />

    <TextView
        android:id="@+id/tvAccount"
        android:layout_width="@dimen/hundred_fifty_five_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@drawable/text_view_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/forty_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:textColor="@color/colorMainText"/>

    <TextView
        android:id="@+id/tvItemText"
        android:layout_width="@dimen/hundred_fifty_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@drawable/text_view_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/forty_dp"
        android:paddingLeft="@dimen/ten_dp"
        android:paddingRight="@dimen/ten_dp"
        android:textColor="@color/colorMainText" />

    <ImageView
        android:id="@+id/btnRemove"
        android:layout_width="@dimen/thirty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/remove" />
</LinearLayout>