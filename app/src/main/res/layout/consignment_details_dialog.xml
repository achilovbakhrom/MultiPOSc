<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/thousand_dp"
        android:layout_height="@dimen/seven_hundred_dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_twenty_dp"
            android:background="@drawable/rounded_blue_bg"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingLeft="@dimen/thirty_dp"
            android:paddingRight="@dimen/thirty_dp"
            android:paddingTop="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConsignmentNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:id="@+id/tvVendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#cce1f2"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#cce1f2"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:id="@+id/tvConsignmentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#cce1f2"
                    android:textSize="@dimen/sixteen_dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExport"
                android:layout_width="@dimen/hundred_twenty_dp"
                android:layout_height="@dimen/thirty_eight_dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/customer_dialog_button_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sixteen_dp"
                    android:layout_height="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:src="@drawable/expert"
                    android:tint="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twelve_dp"
                    android:text="@string/export"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sixteen_dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/llDetailsFrame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/thirty_dp"
                android:paddingTop="@dimen/thirty_dp">


                <LinearLayout
                    android:layout_width="@dimen/five_hundred_dp"
                    android:layout_height="@dimen/eighty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/two_hundred_fifty_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/five_dp"
                        android:gravity="right"
                        android:text="@string/description"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:gravity="left"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/five_hundred_dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fifty_dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:gravity="right"
                            android:text="@string/total_should_pay"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <TextView
                            android:id="@+id/tvTotalShouldPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:gravity="right"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fifty_dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:gravity="right"
                            android:text="@string/first_pay"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <TextView
                            android:id="@+id/tvPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:gravity="right"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fifty_dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:gravity="right"
                            android:text="@string/debt_"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <TextView
                            android:id="@+id/tvDebt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:gravity="right"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/fifty_dp"
                            android:layout_marginRight="@dimen/five_dp"
                            android:gravity="right"
                            android:text="@string/account"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <TextView
                            android:id="@+id/tvPaidAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:gravity="right"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorReportBorderLine" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnClose"
            android:layout_width="@dimen/hundred_thirty_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/fourteen_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:text="@string/close"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/colorSecondaryText" />

    </LinearLayout>

</LinearLayout>