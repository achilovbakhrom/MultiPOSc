<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cvReports"
        android:layout_width="211dp"
        android:layout_height="87dp"
        android:layout_margin="@dimen/fourteen_dp"
        card_view:cardCornerRadius="@dimen/fifteen_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_gravity="center_vertical"
                android:maxHeight="@dimen/thirty_five_dp"
                android:maxWidth="@dimen/thirty_five_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/finance_reports"/>


            <TextView
                android:id="@+id/tvReportsName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textDirection="rtl"
                android:paddingStart="@dimen/ten_dp"
                android:layout_margin="@dimen/sixteen_dp"
                android:text="asasdasdd"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>