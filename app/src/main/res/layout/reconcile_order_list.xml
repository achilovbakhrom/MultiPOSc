<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llOrderNumber"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/order_id"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivOrderSort"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/sorting"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCustomer"
            android:layout_width="@dimen/hundred_thirty_five_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/customer"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivCustomerSort"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/sorting"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTakenDate"
            android:layout_width="@dimen/hundred_thirty_five_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/opened_date"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivTakenDateSort"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/sorting"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTotal"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/debt_total"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivTotalSort"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/sorting"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDueAmount"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/due"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivDueAmountSort"
                android:layout_width="@dimen/twelve_dp"
                android:layout_height="@dimen/ten_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:src="@drawable/sorting"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/actions"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sixteen_dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorTextHint" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvReconcileOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground" />

    <TextView
        android:id="@+id/tvEmptyText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_retained_orders"
        android:visibility="gone" />

</LinearLayout>