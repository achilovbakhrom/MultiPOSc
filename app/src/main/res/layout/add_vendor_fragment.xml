<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty_dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingTop="@dimen/ten_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dp"
            android:text="Management Item Mode"
            android:textColor="@color/colorBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap Product to manage it info"
            android:textColor="@color/colorSecondaryText" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#8a8a8a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:paddingRight="@dimen/thirty_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="@string/vendor_name"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etVendorName"
                android:layout_width="0dp"
                android:maxLength="50"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:inputType="text"
                android:gravity="center_vertical"
                android:hint="@string/name"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivVendorImage"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:src="@drawable/camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="Contact name"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etContactName"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_weight="1"
                android:inputType="text"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:hint="@string/name"
                android:textSize="@dimen/sixteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="Address"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:maxLength="50"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="@string/place"
                android:inputType="text"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="Options"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpCheckbox
                android:id="@+id/chbActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chb_type="3"
                app:checked="true"
                app:text="Active" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_dp"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="@string/contacts"
            android:textColor="#51afe6"
            android:textSize="@dimen/sixteen_dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/twenty_dp"
            android:gravity="center"
            android:orientation="horizontal">



            <com.jim.mpviews.MPosSpinner
                android:id="@+id/spContactType"
                android:layout_width="@dimen/hundred_thirty_dp"
                android:layout_height="@dimen/forty_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etContactData"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:layout_marginRight="@dimen/fifteen_dp"
                android:layout_weight="1"
                android:hint="enter phone number"
                android:inputType="phone"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpMiniActionButton
                android:id="@+id/ivAdd"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/twelve_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:src="@drawable/plus"
                android:tint="#23d730" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/twenty_dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:gravity="right"
        android:orientation="horizontal">

        <com.jim.mpviews.MpButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:text="@string/back"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:text="@string/delete"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/sixteen_dp"
            android:visibility="gone" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnSave"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:text="@string/save"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sixteen_dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>