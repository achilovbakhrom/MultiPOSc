                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/twenty_dp"
                    android:text="Address:"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/twenty_dp"
                        android:text="Some where in the galaxy"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/eighteen_dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/ivEditVendor"
                        android:layout_width="@dimen/twenty_five_dp"
                        android:layout_height="@dimen/twenty_five_dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:gravity="center"
                        android:src="@drawable/edit" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:background="@color/colorTextHint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/thirty_five_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:gravity="center"
                android:text="State details"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/eighteen_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_weight="1"
                    android:text="Debt:"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:gravity="center"
                    android:text="128.00 UZS"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/thirty_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_weight="1"
                    android:text="Payed in this month:"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:gravity="center"
                    android:text="187 000.00 UZS"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/thirty_dp"
            android:background="@color/colorTextHint" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:gravity="right"
            android:orientation="horizontal">

            <com.jim.mpviews.MpButtonWithIcon
                android:layout_width="@dimen/hundred_sixty_five_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dp"
                app:btn_text="Pay"
                app:src="@drawable/currency" />

            <com.jim.mpviews.MpButtonWithIcon
                android:layout_width="@dimen/hundred_sixty_five_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                app:btn_text="Payments"
                app:src="@drawable/payments" />

            <com.jim.mpviews.MpButtonWithIcon
                android:layout_width="@dimen/hundred_sixty_five_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                app:btn_text="Income"
                app:src="@drawable/income_2nd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:gravity="right"
            android:orientation="horizontal">

            <com.jim.mpviews.MpButtonWithIcon
                android:layout_width="@dimen/hundred_sixty_five_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                app:btn_text="Story"
                app:src="@drawable/story" />

            <com.jim.mpviews.MpButtonWithIcon
                android:layout_width="@dimen/hundred_sixty_five_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                app:btn_text="Return"
                app:src="@drawable/expense_2nd" />
        </LinearLayout>
    </LinearLayout>
