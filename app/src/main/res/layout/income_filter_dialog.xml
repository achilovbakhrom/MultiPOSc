<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/three_hundred_dp"
    android:layout_height="@dimen/two_hundred_seventy_dp"
    android:background="@drawable/filter_frame"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:text="@string/filters_"
        android:textColor="#212121"
        android:textSize="@dimen/sixteen_dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbInvoiceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/eighteen_dp"
            app:chb_type="2"
            app:checked="true"
            app:text="Invoice product" />

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbSurplusProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/eighteen_dp"
            app:chb_type="2"
            app:checked="true"
            app:text="Surplus product" />

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbReturnProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eighteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/eighteen_dp"
            app:chb_type="2"
            app:checked="true"
            app:text="Return product" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e4e4e4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.jim.mpviews.MpButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/hundred_thirty_five_dp"
            android:layout_height="@dimen/forty_three_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="@string/cancel"
            android:textColor="#acacac" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnApply"
            android:layout_width="@dimen/hundred_thirty_five_dp"
            android:layout_height="@dimen/forty_three_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="@string/apply"
            android:textColor="#419fd9" />
    </LinearLayout>


</LinearLayout>