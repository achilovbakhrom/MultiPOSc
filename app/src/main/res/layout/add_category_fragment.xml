<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingTop="@dimen/ten_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:text="@string/item_management"
                android:textColor="@color/colorBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_category_to_manage_it"
                android:textColor="@color/colorMainText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="@dimen/twenty_five_dp"
            android:background="@color/colorTextHint" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty_five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="@string/category"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpEditText
                android:id="@+id/etCategoryName"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="@string/name"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivLoadImage"
                android:layout_width="@dimen/thirty_five_dp"
                android:layout_height="@dimen/thirty_five_dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:src="@drawable/camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/thirty_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="@string/description"
                android:textColor="@color/colorMainText"
                android:textSize="@dimen/sixteen_dp" />

            <EditText
                android:id="@+id/etCategoryDescription"
                android:layout_width="0dp"
                android:layout_height="@dimen/two_hundred_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bg"
                android:gravity="left"
                android:hint="@string/some_notes"
                android:inputType="textMultiLine|textCapSentences"
                android:isScrollContainer="true"
                android:maxLength="2000"
                android:maxLines="10"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:paddingTop="@dimen/five_dp"
                android:singleLine="false"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/hundred_forty_five_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="right"
                android:text="@string/options"
                android:textSize="@dimen/sixteen_dp" />


            <com.jim.mpviews.MpCheckbox
                android:id="@+id/chbActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checked="true"
                app:text="Active" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/thirty_dp"
        android:gravity="right"
        android:orientation="horizontal"

        >

        <com.jim.mpviews.MpButton
            android:id="@+id/btnCategoryCancel"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/cancel"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnCategorySave"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:text="@string/save"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/eighteen_dp" />

    </LinearLayout>

</RelativeLayout>