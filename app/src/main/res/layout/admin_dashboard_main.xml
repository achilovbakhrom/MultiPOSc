<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/seven_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:text="@string/dashboard"
                android:textColor="@color/colorBlueSecond" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/seven_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/three_dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/from_right_to_left_shadow" />

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_dp"
                    android:text="Korzinka"
                    android:textColor="@color/colorBlueSecond" />

                <ImageView
                    android:id="@+id/ivArrowFirst"
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pather" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_horizontalview_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/revenue"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_marginStart="@dimen/fourty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp" />

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/profit"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_margin="@dimen/ten_dp" />

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/pay_out"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_margin="@dimen/ten_dp" />

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/pay"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_margin="@dimen/ten_dp" />

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/dept"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_margin="@dimen/ten_dp" />

            <com.jim.mpviews.MpCircleWithText
                android:id="@+id/newCustomers"
                android:layout_width="@dimen/hundred_eighty_dp"
                android:layout_height="@dimen/hundred_eighty_dp"
                android:layout_margin="@dimen/ten_dp" />
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>