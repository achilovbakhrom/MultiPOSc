<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/two_hundred_fifty_dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty_dp"
        android:text="@string/system_currency"
        android:layout_marginTop="@dimen/eighteen_dp"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/eighteen_dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="@dimen/two_hundred_fifty_dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/twenty_dp"
            android:text="@string/choose_system_currency"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/eighteen_dp" />

        <com.jim.mpviews.MPosSpinner
            android:id="@+id/spCurrency"
            android:layout_width="@dimen/two_hundred_forty_five_dp"
            android:layout_height="@dimen/forty_dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/twenty_dp"
        android:paddingRight="@dimen/twenty_dp">

        <com.jim.mpviews.MpButton
            android:id="@+id/btnRevert"
            android:layout_width="@dimen/hundred_thirty_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/back"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/hundred_thirty_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/next"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sixteen_dp" />
    </LinearLayout>
</LinearLayout>