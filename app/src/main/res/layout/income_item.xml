<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/forty_dp"
    android:layout_marginBottom="@dimen/five_dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/thirty_dp"
    android:paddingRight="@dimen/thirty_dp">

    <com.jim.mpviews.MpSpinner
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/twenty_dp"
        android:gravity="left"
        android:textSize="@dimen/eighteen_dp" />

    <LinearLayout
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ten_dp"
        android:background="@drawable/edit_text_bg"
        android:layout_marginRight="@dimen/twenty_dp">

        <EditText
            android:background="@color/colorTransparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="Value"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:textColor="@color/colorMainText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/eighteen_dp" />

        <FrameLayout
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:background="@color/colorTintGrey"
            android:layout_width="1px"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="uzs"
            android:textSize="@dimen/eighteen_dp"
            android:textColor="@color/colorMainText"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <com.jim.mpviews.MpEditText
        android:layout_width="@dimen/hundred_sixty_dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/ten_dp"
        android:gravity="left"
        android:hint="Value"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/eighteen_dp" />

    <TextView
        android:layout_width="@dimen/hundred_twenty_dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg"
        android:layout_marginRight="@dimen/twenty_dp"
        android:gravity="left" />

    <com.jim.mpviews.MpEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/eighteen_dp" />

</LinearLayout>