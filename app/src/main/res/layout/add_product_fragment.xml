<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingTop="@dimen/ten_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:text="Management Item Mode"
                android:textColor="@color/colorBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap Product to manage it info"
                android:textColor="@color/colorTextHint" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="@dimen/twenty_five_dp"
            android:background="@color/colorTextHint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/thirty_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/product"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etProductName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:hint="@string/name"
                    android:textSize="@dimen/sixteen_dp" />

                <ImageView
                    android:id="@+id/ivChooseImage"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/barcode"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etBarcode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/twenty_dp"
                    android:drawableRight="@drawable/barcode"
                    android:drawableTint="#e1e1e1"
                    android:hint="@string/barcode"
                    android:textSize="@dimen/sixteen_dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/sku"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etSKU"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:hint="SKU number"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/sixteen_dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/vendors"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:background="@drawable/edit_text_bg"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/vendor_are_not_choosed"
                    android:paddingLeft="@dimen/ten_dp"
                    android:id="@+id/tvVendor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/unit_category"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MPosSpinner
                    android:id="@+id/spUnitCategories"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/sixteen_dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/unit"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MPosSpinner
                    android:id="@+id/spUnit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/price"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpEditText
                    android:id="@+id/etProductPrice"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_weight="1"
                    android:hint="@string/value"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_weight="1"
                    android:id="@+id/tvPriceCurrency"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/cost"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:id="@+id/etProductCost"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorMainText"
                    android:hint="@string/value"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_weight="1"
                    android:id="@+id/tvCostCurrency"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/product_class"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MPosSpinner
                    android:id="@+id/spProductClass"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:gravity="right"
                    android:text="@string/options"
                    android:textSize="@dimen/sixteen_dp" />

                <com.jim.mpviews.MpCheckbox
                    android:id="@+id/chbActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checked="true"
                    app:text="@string/active"
                    app:chb_type="3"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/thirty_dp"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <com.jim.mpviews.MpButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/cancel"
            android:textColor="@color/colorSecondaryText" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnAdvance"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/delete"
            android:textColor="@color/colorSecondaryText" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnSave"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:text="@string/save"
            android:textColor="@color/colorBlue"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>