<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/ten_dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSubUnitName"
            android:layout_width="@dimen/two_hundred_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/twenty_dp"
            android:background="@drawable/text_view_bg2"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_dp" />

        <TextView
            android:id="@+id/tvMainUnitQty"
            android:layout_width="@dimen/hundred_twenty_five_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/twenty_dp"
            android:background="@drawable/text_view_bg2"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_dp" />

        <ImageView
            android:id="@+id/ivRemoveIngredient"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:tint="@color/colorBlue"
            android:src="@drawable/remove" />

    </LinearLayout>
</LinearLayout>