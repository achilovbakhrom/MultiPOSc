<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/thousand_hundred_seventy_dp"
        android:layout_height="@dimen/six_hundred_sixty_dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:background="@drawable/rounded_blue_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:text="@string/close_till"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/twenty_dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/four_hundred_ninety_five_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical"
                android:paddingTop="@dimen/thirty_dp">


                <TextView
                    android:id="@+id/tvDateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:textColor="@color/colorMainText"
                    android:textSize="@dimen/eighteen_dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorTextHint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBackground"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llReconcileOrder"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/five_dp"
                        android:paddingLeft="@dimen/thirty_dp"
                        android:paddingTop="@dimen/five_dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/reconcile_open_orders"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/eighteen_dp" />


                        <com.jim.mpviews.MpCompletedStateView
                            android:id="@+id/csvReconcileOrder"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/thirty_dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorTextHint" />

                    <LinearLayout
                        android:id="@+id/llCloseAmount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/five_dp"
                        android:paddingLeft="@dimen/thirty_dp"
                        android:paddingTop="@dimen/five_dp">


                        <TextView
                            android:layout_width="295dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/close_the_amount"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/eighteen_dp" />


                        <com.jim.mpviews.MpCompletedStateView
                            android:id="@+id/csvCloseAmount"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/thirty_dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorTextHint" />

                    <LinearLayout
                        android:id="@+id/llToNext"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/five_dp"
                        android:paddingLeft="@dimen/thirty_dp"
                        android:paddingTop="@dimen/five_dp">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="@string/to_next"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/eighteen_dp" />


                        <com.jim.mpviews.MpCompletedStateView
                            android:id="@+id/csvToNext"
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/thirty_dp" />


                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorTextHint" />


                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="67"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/flStepContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorTextHint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/thirty_dp">

            <TextView
                android:id="@+id/tvDescriptionOfStep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/thirty_dp"
                android:text="@string/_1_step_of_3_steps_for_closing_till"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/eighteen_dp" />

            <com.jim.mpviews.MpButton
                android:id="@+id/btnRevert"
                android:layout_width="@dimen/hundred_fifty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/eighteen_dp" />


            <com.jim.mpviews.MpButton
                android:id="@+id/btnNext"
                android:layout_width="@dimen/hundred_fifty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/eighteen_dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>