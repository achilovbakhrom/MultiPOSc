<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClientId"
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/text_view_bg2"
            android:gravity="center_vertical"
            android:hint=""
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:textAlignment="center"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpEditText
            android:id="@+id/etFullName"
            android:layout_width="@dimen/hundred_ninety_five_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:hint="@string/enter_full_name"
            android:inputType="text"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textSize="@dimen/sixteen_dp" />

        <LinearLayout
            android:layout_width="@dimen/hundred_seventy_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/edit_text_bg">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/enter_phone_number"
                android:inputType="phone"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/sixteen_dp" />

            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:src="@drawable/cancel_search"
                android:visibility="gone" />

        </LinearLayout>

        <com.jim.mpviews.MpEditText
            android:id="@+id/etAddress"
            android:layout_width="@dimen/hundred_ninety_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:hint="@string/enter_address"
            android:inputType="text"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/ten_dp"
            android:textSize="@dimen/sixteen_dp" />

        <LinearLayout
            android:layout_width="@dimen/hundred_ninety_five_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp">

            <com.jim.mpviews.MpEditText
                android:id="@+id/etQrCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:backgroundTint="@color/transparent"
                android:textColor="@android:color/black"
                android:textSize="@dimen/eighteen_dp" />

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/barcode"
                android:tint="@color/colorTintGrey" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCustomerGroup"
            android:layout_width="@dimen/hundred_eighty_five_dp"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/edit_text_bg"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="@dimen/hundred_forty_five_dp"
            android:layout_height="@dimen/forty_dp">

            <com.jim.mpviews.MpMiniActionButton
                android:id="@+id/btnSave"
                android:layout_width="@dimen/sixty_five_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/twelve_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:src="@drawable/save_mini"
                android:textSize="@dimen/sixteen_dp" />

            <com.jim.mpviews.MpMiniActionButton
                android:id="@+id/btnRemove"
                android:layout_width="@dimen/sixty_five_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/twelve_dp"
                android:paddingTop="@dimen/twelve_dp"
                android:src="@drawable/trash_mini"
                android:textSize="@dimen/sixteen_dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>