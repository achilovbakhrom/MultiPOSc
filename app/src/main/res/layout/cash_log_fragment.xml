<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingLeft="@dimen/thirty_dp"
        android:paddingRight="@dimen/thirty_dp"
        android:paddingTop="@dimen/ten_dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingBottom="@dimen/five_dp"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:text="@string/account_"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/eighteen_dp" />

        <com.jim.mpviews.MPosSpinner
            android:id="@+id/spAccounts"
            android:layout_width="@dimen/hundred_eighty_dp"
            android:layout_height="@dimen/forty_dp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:background="@color/colorTextHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/thirty_dp"
        android:paddingRight="@dimen/thirty_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/opening_date_"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:id="@+id/tvOpenedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/closing_date_"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:id="@+id/tvClosedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/not_allowed"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/opening_time_"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:id="@+id/tvOpenedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/closing_time_"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

            <TextView
                android:id="@+id/tvClosedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/not_allowed"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sixteen_dp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/flCashDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_hundred_fifty_dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="@dimen/forty_five_dp"
                android:layout_height="@dimen/forty_five_dp"
                android:clickable="true"
                android:src="@drawable/btn_with_left_arrow_selector" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/forty_five_dp"
                android:layout_height="@dimen/forty_five_dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/btn_with_right_arrow_selector" />

            <com.jim.mpviews.CircleIndicator
                android:id="@+id/ciAccountsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty_dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:background="@color/colorTextHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/thirty_dp"
        android:paddingRight="@dimen/thirty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fifty_dp"
            android:text="@string/debt_sales"
            android:textColor="@color/colorMainText" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="5px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/three_dp"
            android:layout_weight="1"
            android:layerType="software"
            android:src="@drawable/dash" />

        <TextView
            android:id="@+id/tvDebtSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            android:text="0"
            android:textColor="@color/colorMainText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ten_dp"
        android:paddingRight="@dimen/thirty_dp">

        <com.jim.mpviews.MpButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/hundred_thirty_dp"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/sixteen_dp" />


    </LinearLayout>

</LinearLayout>