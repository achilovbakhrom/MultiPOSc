<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ten_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:src="@drawable/down_arrow"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvAttributeName"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginRight="@dimen/thirty_five_dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit_text_bg"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbTypeActive"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/twenty_four_dp"
            app:checked="true" />

        <ImageView
            android:id="@+id/ivSaveAttrType"
            android:layout_width="@dimen/twenty_five_dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:src="@drawable/save"
            android:tint="@color/colorTintGrey" />

        <ImageView
            android:id="@+id/ivDeleteAttrType"
            android:layout_width="@dimen/thirty_five_dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:src="@drawable/delete"
            android:tint="@color/colorTintGrey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAttributesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/llAddAttributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ten_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <com.jim.mpviews.MpEditText
            android:id="@+id/etAttributeName"
            android:layout_width="0dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginLeft="@dimen/hundred_fifty_dp"
            android:layout_marginRight="@dimen/forty_dp"
            android:layout_weight="1"
            android:hint="@string/attribute_name"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/sixteen_dp" />

        <com.jim.mpviews.MpCheckbox
            android:id="@+id/chbAttrActive"
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/fifty_dp"
            app:checked="true" />

        <ImageView
            android:id="@+id/ivAddAttribute"
            android:layout_width="@dimen/twenty_five_dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_marginRight="@dimen/twenty_dp"
            android:src="@drawable/add_round" />

    </LinearLayout>
</LinearLayout>