<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.jim.mpviews.MPListItemView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/aivItem"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/hundred_dp"
        android:layout_margin="@dimen/two_dp"
        app:list_item_active="true"
        app:list_item_text="@string/category_name" />

    <ImageView
        android:id="@+id/ivNextItem"
        android:layout_width="@dimen/fifteen_dp"
        android:layout_height="@dimen/fifteen_dp"
        android:layout_gravity="center"
        android:src="@drawable/arrow_next"
        android:visibility="invisible" />

</LinearLayout>