<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/thousand_ninety_dp"
        android:layout_height="@dimen/seven_hundred_dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:background="@drawable/rounded_blue_bg"
            android:paddingBottom="@dimen/ten_dp"
            android:paddingLeft="@dimen/thirty_dp"
            android:paddingRight="@dimen/thirty_dp"
            android:paddingTop="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorWhite"
                    android:text="@string/order_num"
                    android:textSize="@dimen/eighteen_dp" />
                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#cce1f2"
                    android:text="Customer: Jonisbek"
                    android:textSize="@dimen/sixteen_dp" />
                <TextView
                    android:id="@+id/tvOrderCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:text=""
                    android:gravity="left|center_vertical"
                    android:textColor="#cce1f2"
                    android:textSize="@dimen/sixteen_dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llExport"
                android:layout_width="@dimen/hundred_twenty_dp"
                android:layout_height="@dimen/thirty_eight_dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/customer_dialog_button_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sixteen_dp"
                    android:layout_height="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/twenty_dp"
                    android:src="@drawable/expert"
                    android:tint="@color/colorWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twelve_dp"
                    android:text="Export"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sixteen_dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/twenty_dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/llOrderDetials"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvOrderDetials"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/order_details"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:textSize="@dimen/sixteen_dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/three_dp"
                    android:textColor="#2e91cc"
                    />
                <FrameLayout
                    android:id="@+id/flBottomLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/three_dp"
                    android:background="#2b9ee1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPayments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPayments"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/payments"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:textSize="@dimen/sixteen_dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/three_dp"
                    android:textColor="#a9a9a9"
                    />
                <FrameLayout
                    android:id="@+id/flPaymentButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/three_dp"
                    android:background="#2b9ee1"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llLifecycle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvLifecycle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/lifecycle"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:textSize="@dimen/sixteen_dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/three_dp"
                    android:textColor="#a9a9a9"
                    />
                <FrameLayout
                    android:id="@+id/flLifecycleBottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/three_dp"
                    android:background="#2b9ee1"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d6d6d6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            >
            <FrameLayout
                android:id="@+id/flTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:id="@+id/llOrderDetialsFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingTop="@dimen/thirty_dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="@dimen/five_hundred_dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_fifty_dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/sub_total_"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="5px"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/three_dp"
                            android:layout_weight="1"
                            android:layerType="software"
                            android:src="@drawable/dash" />

                        <TextView
                            android:id="@+id/tvSubtTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textColor="@color/colorMainText"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/two_hundred_fifty_dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/summary_"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="5px"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/three_dp"
                            android:layout_weight="1"
                            android:layerType="software"
                            android:src="@drawable/dash" />

                        <TextView
                            android:id="@+id/tvSummary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textColor="@color/colorMainText"
                            android:textSize="@dimen/sixteen_dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOrderDiscountName"
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Summer Sales (4% discount):"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvOrderDiscountAmmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderServiceFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOrderServiceFeeName"
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Packaging (500 service Fee):"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvOrderServiceFeeAmmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_width="@dimen/hundred_fifty_five_dp"
                    android:layout_height="2px"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/thirty_dp"

                    android:layout_marginBottom="@dimen/ten_dp"
                    android:background="@color/colorReportBorderLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:layout_marginBottom="@dimen/thirty_dp">

                    <TextView
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="@string/to_pay_"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvTotalToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOrderPaymentsFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/thirty_dp"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Total Payed:"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvTotalPayed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:text="50 000,00 uzs"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_width="@dimen/hundred_fifty_five_dp"
                    android:layout_height="2px"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/thirty_dp"

                    android:layout_marginBottom="@dimen/ten_dp"
                    android:background="@color/colorReportBorderLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Total to pay:"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvTotalToPayPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:text="+ 500,00 uzs"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/thirty_dp"
                    >

                    <TextView
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Tips:"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:text="65,99 uzs"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:layout_marginBottom="@dimen/thirty_dp">

                    <TextView
                        android:layout_width="@dimen/seven_hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:gravity="right"
                        android:text="Change from Cashbox:"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="5px"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_weight="1"
                        android:layerType="software"
                        android:src="@drawable/dash" />

                    <TextView
                        android:id="@+id/tvChangeFromCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:text="1 300,00 uzs"
                        android:textStyle="bold"
                        android:textColor="@color/colorMainText"
                        android:textSize="@dimen/sixteen_dp" />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorReportBorderLine" />

        <com.jim.mpviews.MpButton
            android:id="@+id/btnClose"
            android:layout_width="@dimen/hundred_sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/fourteen_dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:text="@string/close"
            android:textColor="@color/colorSecondaryText" />


    </LinearLayout>

</LinearLayout>